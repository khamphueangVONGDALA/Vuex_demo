{"ast":null,"code":"import { computed } from \"vue\";\nimport { useStore } from \"vuex\";\nexport default {\n  setup() {\n    const store = useStore();\n    const data = computed(() => store.state.arr);\n\n    function truncase(str, n) {\n      return str?.length > n ? str.substr(0, n - 1) + \"...\" : str;\n    }\n\n    return {\n      data,\n      truncase\n    };\n  }\n\n};","map":{"version":3,"mappings":"AAiDA,SAASA,QAAT,QAAyB,KAAzB;AACA,SAASC,QAAT,QAAyB,MAAzB;AACA,eAAe;EACbC,KAAK,GAAG;IACN,MAAMC,KAAI,GAAIF,QAAQ,EAAtB;IACA,MAAMG,IAAG,GAAIJ,QAAQ,CAAC,MAAMG,KAAK,CAACE,KAAN,CAAYC,GAAnB,CAArB;;IAEA,SAASC,QAAT,CAAkBC,GAAlB,EAAuBC,CAAvB,EAA0B;MACxB,OAAOD,GAAG,EAAEE,MAAL,GAAcD,CAAd,GAAkBD,GAAG,CAACG,MAAJ,CAAW,CAAX,EAAcF,IAAI,CAAlB,IAAuB,KAAzC,GAAiDD,GAAxD;IACF;;IAEA,OAAO;MAAEJ,IAAF;MAAQG;IAAR,CAAP;EACD;;AAVY,CAAf","names":["computed","useStore","setup","store","data","state","arr","truncase","str","n","length","substr"],"sourceRoot":"","sources":["/Users/zero_bot/Documents/Vuejs/blogs/src/components/blog/listBlog.vue"],"sourcesContent":["<template>\n  <div>\n    <v-card\n      v-for=\"(item, index) in data\"\n      :key=\"index\"\n      class=\"w-[700px] mx-auto h-auto mt-3 hover:bg-green-500 hover:text-white\"\n    >\n      <router-link\n        :to=\"{\n          name: 'blog_detail',\n          params: {\n            id: item.id,\n            name: item.name,\n            title: item.title,\n            blog: item.blog,\n          },\n        }\"\n      >\n        <div class=\"flex  py-3 px-3 text-justify\">\n          <div>\n            <div class=\"px-3\">\n              <p class=\"text-blue-500\">Title:</p>\n              <p>{{ item.title }}</p>\n            </div>\n            <div class=\"px-3\">\n              <p class=\"text-blue-500\">Genre</p>\n              <ul>\n                <li\n                  v-for=\"(i, index) in item.Category\"\n                  :key=\"index\"\n                  class=\"whitespace-nowrap\"\n                >\n                  {{ i }}\n                </li>\n              </ul>\n            </div>\n          </div>\n\n          <div class=\"px-3 ml-[20px]\">\n            <p class=\"text-blue-500\">Blog:</p>\n            <p>{{ truncase(item.blog, 70) }}</p>\n          </div>\n        </div>\n      </router-link>\n    </v-card>\n  </div>\n</template>\n\n<script>\nimport { computed } from \"vue\";\nimport { useStore } from \"vuex\";\nexport default {\n  setup() {\n    const store = useStore();\n    const data = computed(() => store.state.arr);\n\n    function truncase(str, n) {\n      return str?.length > n ? str.substr(0, n - 1) + \"...\" : str;\n    }\n\n    return { data, truncase };\n  },\n};\n</script>\n"]},"metadata":{},"sourceType":"module"}